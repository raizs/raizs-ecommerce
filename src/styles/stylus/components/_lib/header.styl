header.app-header
  display block
  background-color white
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.08)
  height $HEADER_HEIGHT

  > *
    display inline-block
    vertical-align middle
    line-height $HEADER_HEIGHT
  
  > div.left-content
    > *
      display inline-block
    div.category
      font-size $FONT_XS
      color $GREY_FONT
      font-weight $FONT_BOLD
      padding 0 2*$D
      cursor pointer
      height $HEADER_HEIGHT
      line-height $HEADER_HEIGHT
      &:hover
        color $GREEN
      button:hover *
        color $GREEN

  > img.logo
    width $LOGO_WIDTH
    margin $D 2*$D
    cursor pointer

  > div.right-content
    float right
    border-left 1px solid $GRAY_BORDER
    padding 0 2*$D
    > *
      display inline-block
      vertical-align middle
      margin 0 $D
      &:hover
        color $GREEN
        cursor pointer

// header tooltip is at this hierarchy because it is rendered @ body level
div#header-tooltip
  > div
    margin-top 0
    max-width 1024px
    &:after
      content ''
      position absolute
      top -1.3 * $D
      right 0
      left 0
      margin auto
      height 2*$D
      width 2*$D
      background-color white
      border-color $GRAY_BORDER
      border-right-width 1px
      border-top-width 1px
      border-right-style solid
      border-top-style solid
      transform rotateZ(-45deg)
  div.header-tooltip-content
    max-height 300px
    > div.subcategories
      column-width 100px
      column-count 2
      padding 2*$D
      padding-top 3*$D
      display inline-block
      > div.subcategory
        font-size $FONT_M
        color $GRAY_FONT
        cursor pointer
        margin-bottom 1.5em
        &:hover
          font-weight $FONT_BOLD
          color $BLACK_FONT
        &:after
          display block
          content attr(title)
          font-weight $FONT_BOLD
          height 0
          overflow hidden
          visibility hidden
    > div.more-info
      display inline-block
      height 100%
      vertical-align top
      div.tooltip-image
        border-radius 16px
        height 170px
        width 170px